<Window x:Class="IceMachineDriver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="TbLog" />
            <Button x:Name="DoProductTestButton" Click="DoProductTestButton_OnClick" Content="Do Product Test"/>
            <Button x:Name="GetTemperatureDataButton" 
                    Click="GetTemperatureDataButton_OnClick" 
                    Content="Get Temperature Data Test"
                    Margin="0 10 0 0"/>
        </StackPanel>
    </Grid>
</Window>
